<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_title_bg"
        android:padding="@dimen/common_padding_10" >

        <TextView
            android:id="@+id/registerBackTextView"
            style="@style/commonText"
            android:drawableLeft="@drawable/common_title_back_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/myinfo_register"
            android:textColor="@color/common_bg"
            android:textSize="@dimen/common_text_size_22" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/common_padding_15" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_height_45"
                    android:background="@drawable/study_layout_bg"
                    android:gravity="center_vertical"
                    android:padding="@dimen/common_padding_5" >

                    <TextView
                        style="@style/commonText"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/myinfo_register_phone"/>

                    <EditText
                        android:id="@+id/registerPhoneEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_height_45"
                    android:layout_marginTop="@dimen/common_margin_3"
                    android:background="@drawable/study_layout_bg"
                    android:gravity="center_vertical"
                    android:padding="@dimen/common_padding_5" >

                    <TextView
                        style="@style/commonText"
                        android:layout_marginLeft="@dimen/common_margin_5"
                        android:gravity="center_vertical"
                        android:text="@string/myinfo_register_pwd" />

                    <EditText
                        android:id="@+id/registerPasswordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_height_45"
                    android:layout_marginTop="@dimen/common_margin_3"
                    android:background="@drawable/study_layout_bg"
                    android:gravity="center_vertical"
                    android:padding="@dimen/common_padding_5" >

                    <TextView
                        style="@style/commonText"
                        android:layout_marginLeft="@dimen/common_margin_5"
                        android:gravity="center_vertical"
                        android:text="@string/myinfo_register_password"/>

                    <EditText
                        android:id="@+id/registerOKPasswordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_height_45"
                    android:layout_marginTop="@dimen/common_margin_3"
                    android:background="@drawable/study_layout_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/common_padding_5" >

                    <TextView
                        style="@style/commonText"
                        android:layout_marginLeft="@dimen/common_margin_5"
                        android:gravity="center_vertical"
                        android:text="@string/myinfo_register_code"/>

                    <EditText
                        android:id="@+id/registerCodeEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="text"
                        android:maxLength="6"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/registerSendCodeTextView"
                        style="@style/commonText"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_button_selector"
                        android:gravity="center"
                        android:text="@string/myinfo_register_send_code"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/common_text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin_15"
                    android:layout_marginRight="@dimen/common_margin_15"
                    android:layout_marginTop="@dimen/common_margin_30"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/registerStudentsTextView"
                        style="@style/commonText"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/study_two_selector"
                        android:gravity="center"
                        android:padding="@dimen/common_padding_8"
                        android:text="@string/myinfo_register_students"
                        android:textSize="@dimen/common_text_size_16" />

                    <TextView
                        android:id="@+id/registerTeacherTextView"
                        style="@style/commonText"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/common_margin_1"
                        android:layout_weight="1"
                        android:background="@drawable/study_two_selector"
                        android:gravity="center"
                        android:padding="@dimen/common_padding_8"
                        android:text="@string/myinfo_register_parent"
                        android:textSize="@dimen/common_text_size_16" />

                    <TextView
                        android:id="@+id/registerParentTextView"
                        style="@style/commonText"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/common_margin_1"
                        android:layout_weight="1"
                        android:background="@drawable/study_two_selector"
                        android:gravity="center"
                        android:padding="@dimen/common_padding_8"
                        android:text="@string/myinfo_register_teacher"
                        android:textSize="@dimen/common_text_size_16" />
                    <TextView
                        android:id="@+id/registerBossTextView"
                        style="@style/commonText"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/common_margin_1"
                        android:layout_weight="1"
                        android:background="@drawable/study_two_selector"
                        android:gravity="center"
                        android:padding="@dimen/common_padding_8"
                        android:text="@string/myinfo_register_boss"
                        android:textSize="@dimen/common_text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin_15"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/commonText"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/common_padding_8"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/common_text_size_16" />

                    <EditText
                        android:id="@+id/registerNameEditText"
                        style="@style/commonText"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/common_margin_1"
                        android:layout_weight="1"
                        android:background="@color/register_transparent"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/myinfo_register_name_hint"
                        android:maxLength="4"
                        android:padding="@dimen/common_padding_8"
                        android:textSize="@dimen/common_text_size_16" >

                        <requestFocus />
                    </EditText>

                    <TextView
                        style="@style/commonText"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/common_margin_1"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/common_padding_8"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/common_text_size_16" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin_15"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/registerAgreeCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/myinfo_register_checkbox_selector"
                    android:text="@string/myinfo_register_agree"
                    android:textSize="@dimen/common_text_size_16" />

                <TextView
                    android:id="@+id/registerServiceTermTextView"
                    style="@style/commonText"
                    android:layout_marginLeft="@dimen/common_margin_3"
                    android:text="@string/myinfo_register_term"
                    android:textColor="@color/common_title_bg"
                    android:textSize="@dimen/common_text_size_16" />
            </LinearLayout>

            <Button
                android:id="@+id/registerButton"
                style="@style/commonButton"
                android:layout_marginBottom="@dimen/common_margin_15"
                android:layout_marginLeft="@dimen/common_margin_15"
                android:layout_marginRight="@dimen/common_margin_15"
                android:text="@string/myinfo_login_register" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>