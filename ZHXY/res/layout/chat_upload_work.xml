<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_title_bg"
        android:padding="@dimen/common_padding_10" >

        <TextView
            android:id="@+id/chatUploadWorkBackTextView"
            style="@style/commonText"
            android:drawableLeft="@drawable/common_title_back_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/chat_upload_work"
            android:textColor="@color/common_bg"
            android:textSize="@dimen/common_text_size_22" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#baeaec"
        android:fadingEdge="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin_8"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/chatUploadWorkEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/heart_item_layout_bg"
                android:inputType="textMultiLine"
                android:padding="@dimen/common_padding_5"
                android:gravity="top|left"
                android:lines="8" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:gravity="center"
                android:layout_marginTop="@dimen/common_margin_8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView 
                        android:id="@+id/chatUploadWorkOneImageView"
                        android:layout_width="@dimen/common_width_100"
                        android:layout_height="@dimen/common_height_100"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/chat_upload_work_add"/>
                    <ImageView 
                        android:id="@+id/chatUploadWorkTwoImageView"
                        android:layout_width="@dimen/common_width_100"
                        android:layout_height="@dimen/common_height_100"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/common_margin_3"
                        android:src="@drawable/chat_upload_work_add"/>
                    <ImageView 
                        android:id="@+id/chatUploadWorkThreeImageView"
                        android:layout_width="@dimen/common_width_100"
                        android:layout_height="@dimen/common_height_100"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/common_margin_3"
                        android:src="@drawable/chat_upload_work_add"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/common_margin_8"
                    android:orientation="horizontal">
                    <ImageView 
                        android:id="@+id/chatUploadWorkFourImageView"
                        android:layout_width="@dimen/common_width_100"
                        android:layout_height="@dimen/common_height_100"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/chat_upload_work_add"/>
                    <ImageView
                        android:id="@+id/chatUploadWorkFiveImageView" 
                        android:layout_width="@dimen/common_width_100"
                        android:layout_height="@dimen/common_height_100"
                        android:contentDescription="@string/app_name"
                        android:layout_marginLeft="@dimen/common_margin_3"
                        android:scaleType="fitXY"
                        android:src="@drawable/chat_upload_work_add"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/chatUploadWorkButton"
                style="@style/commonButton"
                android:layout_marginTop="@dimen/common_margin_8"
                android:text="@string/chat_upload_work_ok" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>