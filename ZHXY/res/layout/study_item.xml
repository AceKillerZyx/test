<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/common_padding_5" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/studyImageLinearLayout"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/common_margin_5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/studyItemNameTextView"
            style="@style/commonText"
            android:textSize="@dimen/common_text_size_16" 
            android:textColor="@color/common_title_bg"
            android:text="Sssss"/>

        <TextView
            android:id="@+id/studyItemAuthorTextView"
            style="@style/commonText"
            android:layout_marginTop="@dimen/common_margin_3"
            android:textSize="14sp"
         	android:textColor="@color/gray" />

        <TextView
            android:id="@+id/studyItemInfoTextView"
            style="@style/commonText"
            android:layout_marginTop="@dimen/common_margin_3" 
            android:textSize="12sp"
         	android:textColor="@color/gray"
         	android:singleLine="true"
			android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/studyImageLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/common_margin_5"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/studyItemImageView"
            android:layout_width="@dimen/common_width_70"
            android:layout_height="@dimen/common_height_100"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/study_item_bg" />

        <View
            android:id="@+id/studyItemView"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/common_margin_5"
            android:layout_marginRight="@dimen/common_margin_5"
            android:background="@android:color/white" />
    </LinearLayout>

</RelativeLayout>