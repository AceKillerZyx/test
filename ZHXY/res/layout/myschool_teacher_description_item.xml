<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/heart_item_layout_bg"
    android:orientation="vertical"
    android:padding="@dimen/common_padding_5" >

    <LinearLayout
        android:id="@+id/myschoolteacherItemImageLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/common_margin_5"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myschoolteacherItemImageView"
            android:layout_width="@dimen/common_width_100"
            android:layout_height="@dimen/common_height_150"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/heart_item_bg" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/common_margin_8"
            android:layout_marginRight="@dimen/common_margin_8"
            android:background="@color/common_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin_5"
        android:layout_toRightOf="@id/myschoolteacherItemImageLinearLayout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/myschoolteacherItemTnamesTextView"
            style="@style/commonText"
            android:textColor="@color/common_text"/>

        <TextView
            android:id="@+id/myschoolteacherItemUserNameTextView"
            style="@style/commonText"
            android:textColor="@color/common_text"
            android:layout_marginTop="@dimen/common_margin_3"
            android:textSize="@dimen/common_text_size_14" />
        <TextView
            android:id="@+id/myschoolteacherItemGradeNameTextView"
            style="@style/commonText"
            android:textColor="@color/common_text"
            android:textSize="@dimen/common_text_size_14" />
        <TextView
            android:id="@+id/myschoolteacherItemAgeTextView"
            style="@style/commonText"
            android:textColor="@color/common_text"
            android:textSize="@dimen/common_text_size_14"/>
        <TextView
            android:id="@+id/myschoolteacherItemEducationTextView"
            style="@style/commonText"
            android:textColor="@color/common_text"
            android:textSize="@dimen/common_text_size_14" />
        <TextView
            android:id="@+id/hmyschoolteacherItemQualificationsTextView"
            style="@style/commonText"
            android:textColor="@color/common_text"
            android:textSize="@dimen/common_text_size_14" />
        <TextView
            android:id="@+id/myschoolteacherItemCertificateNumberTextView"
            style="@style/commonText"
            android:textColor="@color/common_text"
            android:textSize="@dimen/common_text_size_14" />
    </LinearLayout>
    
</RelativeLayout>