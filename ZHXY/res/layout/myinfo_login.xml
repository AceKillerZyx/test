<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg" >

    <ImageView
        android:id="@+id/loginLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_margin_55"
        android:contentDescription="@string/app_name"
        android:src="@drawable/myinfo_login_title" />

    <ImageView
        android:id="@+id/loginInfoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginLogoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_margin_30"
        android:contentDescription="@string/app_name"
        android:src="@drawable/myinfo_login_title_info" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/loginInfoImageView"
        android:layout_marginTop="@dimen/common_margin_35"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/common_padding_15" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_height_45"
            android:background="@drawable/study_layout_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/common_padding_5" >

            <TextView
                style="@style/commonText"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/myinfo_login_username"
                android:drawablePadding="@dimen/common_padding_2"
                android:gravity="center_vertical"
                android:text="@string/myinfo_login_username" />

            <EditText
                android:id="@+id/loginUserNameEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="text"
                android:paddingLeft="@dimen/common_padding_5"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_height_45"
            android:layout_marginTop="@dimen/common_margin_3"
            android:background="@drawable/study_layout_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/common_padding_5" >

            <TextView
                style="@style/commonText"
                android:layout_marginLeft="@dimen/common_margin_5"
                android:drawableLeft="@drawable/myinfo_login_password"
                android:drawablePadding="@dimen/common_padding_2"
                android:gravity="center_vertical"
                android:text="@string/myinfo_login_password"/>

            <EditText
                android:id="@+id/loginPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingLeft="@dimen/common_padding_5"
                android:inputType="textPassword"
                android:singleLine="true"/>
        </LinearLayout>

        <RelativeLayout
            android:padding="@dimen/common_padding_5"
            android:id="@+id/loginRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/common_button_selector"
            android:layout_marginTop="@dimen/common_margin_15" >

            <TextView
                style="@style/commonText"
                android:textSize="@dimen/common_text_size_20"
                android:textColor="@android:color/white"
                android:layout_marginRight="@dimen/common_margin_15"
                android:text="@string/myinfo_login"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relative_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/common_margin_15"
            android:padding="5dp" >

            <TextView
                android:id="@+id/loginForgetPasswordTextView"
                style="@style/commonText"
                android:text="@string/myinfo_login_forget_password"
                android:textSize="@dimen/common_text_size_16" />

            <TextView
                android:id="@+id/loginRegisterTextView"
                style="@style/commonText"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="@string/myinfo_login_register"
                android:textSize="@dimen/common_text_size_16" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>