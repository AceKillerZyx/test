<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/common_padding_8" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/chatShareWXButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_5"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/chat_share_wx" />

        <Button
            android:id="@+id/chatShareWXFrinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_15"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/chat_share_wx_frined" />

        <Button
            android:id="@+id/chatShareSinaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_15"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/chat_share_sina" />
    </LinearLayout>

    <Button
        android:id="@+id/chatShareCancelButton"
        style="@style/commonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/common_margin_8"
        android:background="@drawable/common_button_selector"
        android:text="@string/common_cancel" />

</LinearLayout>