<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_title_bg"
        android:padding="@dimen/common_padding_10" >

        <TextView
            android:id="@+id/mySchoolBackTextView"
            style="@style/commonText"
            android:drawableLeft="@drawable/common_title_back_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/main_myschool"
            android:textColor="@color/common_bg"
            android:textSize="@dimen/common_text_size_22" />

        <TextView
            android:id="@+id/mySchoolWriteOffTextView"
            style="@style/commonText"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/myschool_write_off"
            android:textColor="@color/common_bg"
            android:textSize="@dimen/common_text_size_16" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:focusable="true"
                android:orientation="vertical" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/mySchoolViewPager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/common_viewpager_bg"
                    android:focusable="true" />

                <LinearLayout
                    android:id="@+id/mySchoolLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mySchoolCampusCultureRelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_height_80"
                android:layout_marginTop="@dimen/common_margin_15"
                android:background="@drawable/study_layout_bg"
                android:gravity="center_vertical"
                android:padding="@dimen/common_padding_5" >

                <ImageView
                    android:id="@+id/mySchoolCampusCultureImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/myschool_campus_culture"
                    android:contentDescription="@string/app_name" />

                <View
                    android:id="@+id/mySchoolCampusCultureView"
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/common_margin_5"
                    android:layout_toRightOf="@id/mySchoolCampusCultureImageView"
                    android:background="@color/gray" />

                <TextView
                    style="@style/commonText"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_margin_15"
                    android:layout_toRightOf="@id/mySchoolCampusCultureView"
                    android:text="@string/myschool_campus_culture"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mySchoolTeacherDescriptionRelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_height_80"
                android:layout_marginTop="@dimen/common_margin_15"
                android:background="@drawable/study_layout_bg"
                android:gravity="center_vertical"
                android:padding="@dimen/common_padding_5" >

                <ImageView
                    android:id="@+id/mySchoolTeacherDescriptionImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/myschool_teacher_description"
                    android:contentDescription="@string/app_name" />

                <View
                    android:id="@+id/mySchoolTeacherDescriptionView"
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/common_margin_5"
                    android:layout_toRightOf="@id/mySchoolTeacherDescriptionImageView"
                    android:background="@color/gray" />

                <TextView
                    style="@style/commonText"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_margin_15"
                    android:layout_toRightOf="@id/mySchoolTeacherDescriptionView"
                    android:text="@string/myschool_teacher_description"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mySchoolInformedRelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_height_80"
                android:layout_marginTop="@dimen/common_margin_15"
                android:background="@drawable/study_layout_bg"
                android:gravity="center_vertical"
                android:padding="@dimen/common_padding_5" >

                <ImageView
                    android:id="@+id/mySchoolInformedImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/myschool_informed"
                    android:contentDescription="@string/app_name" />

                <View
                    android:id="@+id/mySchoolInformedView"
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/common_margin_5"
                    android:layout_toRightOf="@id/mySchoolInformedImageView"
                    android:background="@color/gray" />

                <TextView
                    style="@style/commonText"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_margin_15"
                    android:layout_toRightOf="@id/mySchoolInformedView"
                    android:text="@string/myschool_informed" 
                    android:textSize="14sp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>